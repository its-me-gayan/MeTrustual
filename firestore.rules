rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helpers ──────────────────────────────────────────────────
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isValidSecurityUpdate() {
      let sec = request.resource.data.get('security', null);
      return sec == null
        || sec.get('lockUntil', null) == null
        || sec.lockUntil >= request.time;
    }

    // ── User root document ────────────────────────────────────────
    match /users/{userId} {
      allow read:   if isAuthenticated() && isOwner(userId);
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated()
                    && isOwner(userId)
                    && isValidSecurityUpdate();

      // ── Subcollections ────────────────────────────────────────
      match /profile/{document=**} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      match /cycles/{document=**} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      match /logs/{document=**} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      match /settings/{document=**} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      match /journey/{document=**} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      match /ritual_completions/{document=**} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }

    // ── Community ─────────────────────────────────────────────────
    match /community/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
                    && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isAuthenticated()
                             && resource.data.authorId == request.auth.uid;
    }

    // ── Static / Read-only content ────────────────────────────────
    match /journey/{mode} {
      allow read:  if isAuthenticated();
      allow write: if false;
    }

    match /education/{articleId} {
      allow read:  if isAuthenticated();
      allow write: if false;
    }

    match /journeys/{document=**} {
      allow read:  if isAuthenticated();
      allow write: if false;
    }

    match /config/{document=**} {
      allow read:  if isAuthenticated();
      allow write: if false;
    }

    match /education_articles/{articleId} {
      allow read:  if isAuthenticated() && resource.data.isPublished == true;
      allow write: if false;
    }

    // ── Default deny ──────────────────────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }
  }
}